[Unit]
Description=Useless Tank ROS launch
After=network-online.target bluetooth.target
StartLimitIntervalSec=600
StartLimitBurst=10

[Service]
User=tank
Group=tank
WorkingDirectory=~
Type=exec
#ExecStartPre=/bin/sleep 30
ExecStart=/home/tank.service/tank-service-start.sh
ExecStop=/home/tank.service/tank-service-stop.sh
KillMode=control-group
TimeoutStartSec=180
TimeoutStopSec=60
Restart=always
RestartSec=30

[Install]
WantedBy=multi-user.target
Alias=tank.service
